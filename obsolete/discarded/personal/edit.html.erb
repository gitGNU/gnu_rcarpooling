<% content_for(:navigation_path) do -%>
  <%= render :partial => "partials/navigation_path",
        :object => ["/", "/personal",
                    "/personal/edit?user_id=#{@user_id}"] %>
<% end -%>
<script type="text/javascript">
  //<![CDATA[
  xhr = new XMLHttpRequest();
  xhr.open("GET", <%= "\"" + "/users/#{@user_id}/edit" + "\""%>, true);
  xhr.onreadystatechange = function() {
    if (4 == xhr.readyState)
    {
      document.getElementById('form').innerHTML = xhr.responseText;
    }
  }
  xhr.send();
  //]]>
</script>
<div id="form"></div>
