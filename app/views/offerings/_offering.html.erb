<table class="almost_normal">
  <tr>
    <td class="bold"><%= I18n.t 'offerings.index.from' %></td>
    <td><%= render :partial => "places/place",
            :object => offering.departure_place %></td>
    <td class="bold"><%= I18n.t 'offerings.index.departure_time'%></td>
    <td><%= I18n.l offering.departure_time, :format => :short %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.index.to' %></td>
    <td><%= render :partial => "places/place",
            :object => offering.arrival_place %></td>
    <td class="bold"><%= I18n.t 'offerings.index.arrival_time'%></td>
    <td><%= I18n.l offering.arrival_time, :format => :short %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.index.created_at'%></td>
    <td><%= I18n.l offering.created_at, :format => :short%></td>
    <td class="bold"><%= I18n.t 'offerings.index.chilled_since'%></td>
    <td><%= I18n.l offering.chilled_since, :format => :short %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.index.in_use'%></td>
    <td>
      <% if offering.in_use? -%>
        <%= I18n.t 'yes_w' %>
      <% else -%>
        <%= I18n.t 'no_w' %>
      <% end -%>
    </td>
    <td class="bold"><%= I18n.t 'offerings.index.chilled'%></td>
    <td>
      <% if offering.chilled? -%>
        <%= I18n.t 'yes_w' %>
      <% else -%>
        <%= I18n.t 'no_w' %>
      <% end -%>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to I18n.t('offerings.index.details_link'),
          offering_url(offering) %>
    </td>
  </tr>
</table>
