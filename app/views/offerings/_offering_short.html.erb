<% offering = offering_short -%>
<table class="almost_normal">
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.from' %></span>
    </td>
    <td><%= render :partial => "places/place", :object => offering.departure_place %></td>
    <td>
      <span class="bold"><%= I18n.t 'offerings.departure_time'%></span>
    </td>
    <td><%= I18n.l offering.departure_time, :format => :short %></td>
  </tr>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.to' %></span>
    </td>
    <td><%= render :partial => "places/place", :object => offering.arrival_place %></td>
    <td>
      <span class="bold"><%= I18n.t 'offerings.arrival_time'%></span>
    </td>
    <td><%= I18n.l offering.arrival_time, :format => :short %></td>
  </tr>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.created_at'%></span>
    </td>
    <td><%= I18n.l offering.created_at, :format => :short%></td>
  </tr>
  <tr>
    <td>
      <%= link_to I18n.t('offerings.details_link'), offering_url(offering) %>
    </td>
  </tr>
</table>
