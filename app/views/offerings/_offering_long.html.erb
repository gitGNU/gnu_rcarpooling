<% offering = offering_long -%>
<table>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.form.labels.departure_place' %></span>
    </td>
    <td><%= render :partial => "places/place", :object => offering.departure_place %></td>
  </tr>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.form.labels.arrival_place' %></span>
    </td>
    <td><%= render :partial => "places/place", :object => offering.arrival_place %></td>
  </tr>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.created_at'%></span>
    </td>
    <td><%= I18n.l offering.created_at, :format => :long %></td>
  </tr>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.form.labels.departure_time'%></span>
    </td>
    <td><%= I18n.l offering.departure_time, :format => :long %></td>
  </tr>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.form.labels.arrival_time'%></span>
    </td>
    <td><%= I18n.l offering.arrival_time, :format => :long %></td>
  </tr>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.form.labels.expiry_time'%></span>
    </td>
    <td><%= I18n.l offering.expiry_time, :format => :long %></td>
  </tr>
  <tr>
    <td>
      <span class="bold"><%= I18n.t 'offerings.form.labels.seating_capacity'%></span>
    </td>
    <td><%= offering.seating_capacity %></td>
  </tr>
</table>
