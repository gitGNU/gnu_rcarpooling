<% offering = offering_long -%>
<table class="offering_long">
  <tr>
    <td class="bold"><%= I18n.t 'offerings.form.labels.departure_place' %></td>
    <td><%= offering.departure_place.name %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.form.labels.arrival_place' %></td>
    <td><%= offering.arrival_place.name %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.created_at'%></td>
    <td><%= I18n.l offering.created_at, :format => :long %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.form.labels.departure_time'%></td>
    <td><%= I18n.l offering.departure_time, :format => :long %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.form.labels.arrival_time'%></td>
    <td><%= I18n.l offering.arrival_time, :format => :long %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.form.labels.expiry_time'%></td>
    <td><%= I18n.l offering.expiry_time, :format => :long %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'offerings.form.labels.seating_capacity'%></td>
    <td><%= offering.seating_capacity %></td>
  </tr>
</table>
