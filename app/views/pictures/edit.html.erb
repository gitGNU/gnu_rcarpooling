<% content_for(:navigation_path) do -%>
  <%= render :partial => "partials/navigation_path",
    :object => [home_path, me_users_path, user_path(@user),
                edit_user_picture_path(:user_id => @user.id) ] %>
<% end -%>


<% form_for(:picture, :url => user_picture_url(@user),
    :html => { :method => :put, :multipart => true }) do |form| %>
  <%= form.error_messages :class => "errors" %>
  <table>
    <tr>
      <td>
        <span class="bold"><%= I18n.t 'users.upload_picture' %></span>
      </td>
      <td>
        <%= form.file_field(:uploaded_data, :size => 20) %>
      </td>
    </tr>
    <tr>
      <td>
        <%= submit_tag(I18n.t('users.actions.upload_picture_button_label')) %>
      </td>
    </tr>
  </table>
<% end %>
