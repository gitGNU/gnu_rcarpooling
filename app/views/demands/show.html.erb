<% content_for(:navigation_path) do -%>
  <%= render :partial => "partials/navigation_path",
      :object => [home_path, me_users_path, demands_path,
                  demand_path(@demand)] %>
<% end -%>

<div class="float_right">
  <%= link_to I18n.t('demands.show.all_demands_link'), demands_url %>
</div>

<h3>
  <%= I18n.t 'demands.show.title', :id => @demand.id %>
  <% if @demand.fulfilled? -%>
    <span class="almost_normal"><%= I18n.t 'demands.show.fulfilled' %></span>
  <% else -%>
    <span class="almost_normal"><%= I18n.t 'demands.show.not_fulfilled' %></span>
  <% end -%>
</h3>

<%= render :partial => "demand_detailed", :object => @demand %>

<% if @demand.deletable? -%>
  <p class="almost_normal"><%= I18n.t 'demands.show.guide.delete' %></p>
  <%= button_to I18n.t('demands.show.delete_label'), demand_url(@demand),
    :method => :delete, :confirm => I18n.t('are_you_sure?') %>
<% end -%>

<div class="float_right">
  <%= link_to I18n.t('demands.show.all_demands_link'), demands_url %>
</div>
