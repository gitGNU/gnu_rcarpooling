<% demand = demand_short -%>
<table class="demand_short">
  <tr>
    <td class="bold"><%= I18n.t 'demands.from' %></td>
    <td><%= demand.departure_place.name %></td>
    <td class="bold"><%= I18n.t 'demands.min_departure_time'%></td>
    <td><%= I18n.l demand.earliest_departure_time, :format => :short %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'demands.to' %></td>
    <td><%= demand.arrival_place.name %></td>
    <td class="bold"><%= I18n.t 'demands.max_arrival_time'%></td>
    <td><%= I18n.l demand.latest_arrival_time, :format => :short %></td>
  </tr>
  <tr>
    <td class="bold"><%= I18n.t 'demands.created_at'%></td>
    <td><%= I18n.l demand.created_at, :format => :short%></td>
  </tr>
  <tr>
    <td>
      <%= link_to I18n.t('demands.details_link'), demand_url(demand) %>
    </td>
  </tr>
</table>
