  <div id="unwelcome_drivers_set">
    <% if unwelcome_drivers.empty? -%>
      <p>
        <span class="italic"><%= I18n.t('users.no_drivers_in_black_list') %></span>
      </p>
    <% else -%>
      <table>
        <% unwelcome_drivers.each do |driver| -%>
          <tr>
            <td><%= render :partial => "users/user", :object => driver %></td>
            <td><%= link_to_remote I18n.t(
              'users.actions.delete_link_name'),
              :url => user_unwelcome_driver_url(
              :user_id => user.id, :id => driver.id),
              :method => :delete,
              :confirm => I18n.t('are_you_sure?') %>
            </td>
          </tr>
        <% end -%>
      </table>
    <% end -%>
  </div>
<%= drop_receiving_element('unwelcome_drivers_set',
  :accept => "user",
  :hoverclass => "hover",
  :with => "'unwelcome_driver=' + encodeURIComponent(element.id.split('_').last())",
  :url => user_unwelcome_drivers_url(:user_id => @user.id))%>
