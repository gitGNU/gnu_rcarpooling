<% if @users.empty? -%>
  <div class="italic_little">
    <%= I18n.t('user.search.empty_results_set') %>
  </div>
<% else -%>
  <ul>
    <% @users.each do |user| -%>
      <% domid = "user_#{user.id}" -%>
      <li class="user" id='<%= domid %>'>
        <span class="span_spaced"><%= h user.name %></span>
        <span class="span_spaced"><%= h user.nick_name %></span>
      </li>
      <%= draggable_element(domid, :ghosting => true, :revert => true) %>
    <% end -%>
  </ul>
<% end -%>
