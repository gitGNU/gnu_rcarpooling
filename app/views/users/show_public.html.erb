<h3>
  <%= I18n.t('users.public.heading_details') %>
  <%= render :partial => "user_name", :object => @user %>
</h3>
<table>
  <tr><td><span class="bold"><%= I18n.t('users.first_name')%></span>
    </td><td><%= h @user.first_name %></td>
  </tr>
  <tr><td><span class="bold"><%= I18n.t('users.last_name')%></span>
    </td><td><%= h @user.last_name %></td>
  </tr>
  <tr><td><span class="bold"><%= I18n.t('users.sex')%></span>
    </td><td><%= h @user.sex %></td>
  </tr>
  <tr><td><span class="bold"><%= I18n.t('users.nick_name')%></span>
    </td><td><%= h @user.nick_name %></td>
  </tr>
  <% if @user.shows_email? -%>
    <tr>
      <td><span class="bold"><%= I18n.t('users.email')%></span></td>
      <td><%= h @user.email %></td>
    </tr>
  <% end -%>
  <% if @user.shows_telephone_number? -%>
    <tr>
      <td><span class="bold"><%= I18n.t('users.telephone_number')%></span></td>
      <td>
        <%= h @user.telephone_number %>
      </td>
    </tr>
  <% end -%>
  <% if @user.shows_vehicle_registration_plate? -%>
    <tr>
      <td>
        <span class="bold"><%= I18n.t('users.public.vehicle_registration_plate')%></span>
      </td>
      <td>
        <%= h @user.vehicle_registration_plate %>
      </td>
    </tr>
  <% end -%>
  <% if @user.shows_picture? -%>
    <tr>
      <td><span class="bold"><%= I18n.t 'users.picture' %></span></td>
      <td>
        <%= render :partial => "pictures/picture", :object => @user.picture %>
      </td>
    </tr>
  <% end -%>
  <tr>
    <td><span class="bold"><%= I18n.t 'users.member_since' %></span></td>
    <td><%= I18n.l @user.created_at, :format => :long %></td>
  </tr>
</table>

<%= render :partial => 'show_public_common', :locals => { :user => @user,
                                                :requester => @requester } %>
