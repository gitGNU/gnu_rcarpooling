<% if @users.empty? -%>
  <p class="italic" style='width: 40%; text-align: center;'>
    <%= I18n.t('users.search.empty_results_set') %>
  </p>
<% else -%>
  <div style='margin: 1em;'>
    <% @users.each do |user| -%>
      <% domid = "user_#{user.id}" -%>
      <div class="user" id='<%= domid %>'
      style='margin: 1em; padding: 0.1em; background-color: rgb(255, 230, 230); width: 60%;'>
        <%= render :partial => "user_name_complete", :object => user %><br/>
        <span class='small_bold'><%= I18n.t 'users.actions.drag_me' %></span>
      </div>
      <%= draggable_element(domid, :ghosting => true, :revert => true,
              :scroll => "window" ) %>
    <% end -%>
  </div>
<% end -%>
