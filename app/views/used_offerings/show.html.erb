<% uo = @used_offering -%>
<% content_for(:navigation_path) do -%>
  <%= render :partial => "partials/navigation_path",
    :object => ["/", offerings_path, offering_path(uo.offering)] %>
<% end -%>

<p><%= I18n.t 'used_offerings.offering_intro' %></p>
<%= render :partial => "offerings/offering_long", :object => uo.offering %>

<p>
  <%= I18n.t 'used_offerings.actual_seating_capacity' %>
  <%= uo.seating_capacity %>
</p>

<p><%= I18n.t 'used_offerings.passengers_intro' %></p>
  <ul>
    <% uo.passengers.each do |p| -%>
      <li><%= render :partial => "users/user_name", :object => p %></li>
    <% end -%>
  </ul>

<% if !uo.chilled? -%>
  <%= button_to I18n.t('offerings.form.delete'), used_offering_url(uo),
    :method => :delete %>
<% end -%>
